<h1> Login </h1>

<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter your email", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
  </div>

  <%= f.submit "Log In", class: "btn btn-block btn-primary" %>
<% end %>
<br>
<p>Don't have an account? <%= link_to "Click here", new_user_path %> to sign up.</p>
