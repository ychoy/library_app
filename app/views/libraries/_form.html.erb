<div class="row">
	<div clas="col-md-6 col-md-offset-3">
		<%= form_for @library do |f| %>
  	<div class="form-group">
    	<%= f.text_field :name, placeholder: "Name", class: "form-control", autofocus: true %>
  	</div>
  	<div class="form-group">
    	<%= f.number_field :floor_count, placeholder: "Floor Count", class: "form-control", autofocus: true   %>
  	</div>
  	<div class="form-group">
    	<%= f.number_field :floor_area, placeholder: "Floor Area" , class: "form-control",  autofocus: true  %>
  	</div>
  		<%= f.submit %>
		<% end %>
	</div>
</div>

