<div class='container'>
	<h1> Libraries</h1>
	<div class='table-responsive'>
		<table class='table'>
			<thead>
				<tr>
					<th>Name</th>
					<th colspan="3"></th>
			</thead>

			<tbody>
				<% @libraries.each do |library| %>
  				<tr>
    				<td><%= library.name %></td>
						<td><%= link_to 'Show', library %></td>
						<td><%= link_to 'Edit', edit_library_path(library) %></td>
    				<td><%= link_to 'Delete', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<%end %>
			</tbody>
		</table>
	</div>

	<br>
	<%= link_to 'Add New Library', new_library_path %>
</div>
